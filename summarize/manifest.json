{
  "manifest_version": 3,
  "name": "My AI Summarizer",
  "version": "1.0",
  "description": "A simple extension to summarize content from the active webpage using a built-in AI.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "images/icon16.png"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
